<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>PI2 / Cadastro de Linha de Ônibus</title>

    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>

    
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        Cadastro realizado com sucesso.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

    if (response.status === 200) {
        // Armazene a mensagem de sucesso no localStorage
        localStorage.setItem('successMessage', 'Cadastro realizado com sucesso!');
        // Redirecione para a página /linhas
        window.location.href = 'http://localhost:3000/linhas';
    }

    // Verifique se há uma mensagem de sucesso no localStorage
const successMessage = localStorage.getItem('successMessage');

// Se houver uma mensagem de sucesso, exiba-a na página
if (successMessage) {
    const alertDiv = document.createElement('div');
    alertDiv.className = 'alert alert-primary';
    alertDiv.textContent = successMessage;
    document.body.appendChild(alertDiv);

    // Remova a mensagem do localStorage para não exibi-la novamente na próxima visita à página
    localStorage.removeItem('successMessage');
}



    <div class="container my-3">
        <div class="row">
            <div class="col-12">
                <h1 class="h1">Cadastro de Linha de Ônibus</h1>
            </div>
        </div>

        <form id="linhaOnibusForm" class="needs-validation" novalidate>
            <div class="row">
                <div class="col-12">
                    <label for="nome" class="form-label">Nome</label>
                    <input type="text" class="form-control" id="nome" maxlength="100" required>
                    <div class="invalid-feedback">Nome é um campo obrigatório.</div>
                </div>

                <div class="col-6">
                    <label for="origem" class="form-label">Origem</label>
                    <input type="text" class="form-control" id="origem" maxlength="100" required>
                    <div class="invalid-feedback">Origem é um campo obrigatório.</div>
                </div>

                <div class="col-6">
                    <label for="destino" class="form-label">Destino</label>
                    <input type="text" class="form-control" id="destino" maxlength="100" required>
                    <div class="invalid-feedback">Destino é um campo obrigatório.</div>
                </div>

                <div class="col-6">
                    <label for="horarioPartida" class="form-label">Horário de Partida</label>
                    <input type="time" class="form-control" id="horarioPartida" required>
                    <div class="invalid-feedback">Horário de Partida é um campo obrigatório.</div>
                </div>

                <div class="col-6">
                    <label for="horarioChegada" class="form-label">Horário de Chegada</label>
                    <input type="time" class="form-control" id="horarioChegada" required>
                    <div class="invalid-feedback">Horário de Chegada é um campo obrigatório.</div>
                </div>
            </div>

            <hr class="my-4">

            <button class="w-100 btn btn-primary btn-lg" type="submit">Cadastrar</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        (() => {
            const form = document.querySelector('#linhaOnibusForm');

            form.addEventListener('submit', async event => {
                event.preventDefault();

                if (!form.checkValidity()) {
                    event.stopPropagation();
                } else {
                    try {
                        const nome = document.getElementById('nome').value;
                        const origem = document.getElementById('origem').value;
                        const destino = document.getElementById('destino').value;
                        const horarioPartida = document.getElementById('horarioPartida').value;
                        const horarioChegada = document.getElementById('horarioChegada').value;

                        const data = {
                            nome,
                            origem,
                            destino,
                            horarioPartida,
                            horarioChegada
                        };

                        const response = await axios.post('http://localhost:3000/api/linhas/cadastrar', data);

                        console.log('Resposta do servidor:', response.data);

                        if (response.status === 200) {
                            localStorage.setItem('successMessage', 'Cadastro realizado com sucesso!');
                            window.location.href = 'http://localhost:3000/linhas';
                        } else {
                            console.error('Erro no servidor:', response.data);
                        }
                    } catch (error) {
                        console.error('Erro ao enviar a solicitação:', error);
                    }
                }

                form.classList.add('was-validated');
            });
        })();
    </script>
</body>

</html>