<!DOCTYPE html>
<html>

<head>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <div class="container">
    <div class="row">
      <div class="col" id="alert"></div>
    </div>

    <div class="row">
      <div class="col">
        <h1>FrontEnd</h1>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <ul>
          <li><a href="/linhas/cadastrar">/linhas/cadastrar</a></li>
          <li><a href="/linhas/qtd-horarios-por-linha">/linhas/qtd-horarios-por-linha</a></li>
          <li><a href="http://localhost:3000/api/linhas">http://localhost:3000/api/linhas</a></li>
          <li><a href="http://localhost:3000/api/linhas/qtd-horarios-por-linha">http://localhost:3000/api/linhas/qtd-horarios-por-linha</a></li>          
        </ul>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
    
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const { alertType, alertMessage } = JSON.parse(localStorage.getItem('alert'));

      if (alertType) {
        const alert = document.createElement('div');
        alert.className = `alert alert-${alertType} alert-dismissible fade show`;
        alert.innerHTML = `${alertMessage} <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>`;

        document.querySelector("#alert").append(alert);

        localStorage.removeItem('alert');
      }
    });
  </script>
</body>

</html>